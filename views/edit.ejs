<%include partials/header %>
<div class="ui text main container segment">
    <div class="ui huge header">
        Edit <%= blog.title %>
    </div>
    <form class="ui form" action="/blogs/<%= blog._id%>?_method=PUT" method="POST">
        <div class="field">
            <label for="title">Title</label>
            <input type="text" placeholder="title" value="<%= blog.title %>">
        </div>
        <div class="field">
            <label for="image">Image_URL</label>
            <input type="text" placeholder="image_url" value="<%= blog.image %>">
        </div>
        <div>
            <label for="blog_details">BlogContent</label>
            <textarea name="blog[body]" cols="30" rows="10"><%= blog.body %></textarea>
        </div>
        <input class="ui inverted violet button" type="submit">
    </form>
</div>
<%include partials/footer %>